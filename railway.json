{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd backend && npm install"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd backend && npm run db:migrate && node src/server.js",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3,
    "sleepApplication": false
  }
}
