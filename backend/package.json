{
  "name": "fuelsync-backend",
  "version": "2.0.0",
  "description": "FuelSync Backend API - Clean Architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:sync": "node -e \"require('./src/models').syncDatabase({ alter: true }).then(() => process.exit(0))\"",
    "db:reset": "node -e \"require('./src/models').syncDatabase({ force: true }).then(() => process.exit(0))\"",
    "db:seed": "node -e \"const m = require('./src/models'); m.syncDatabase().then(() => m.seedDefaultData()).then(() => process.exit(0))\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "fuel",
    "station",
    "management",
    "api",
    "nozzle",
    "readings"
  ],
  "author": "FuelSync Team",
  "license": "MIT"
}
