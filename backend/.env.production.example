# FuelSync Backend - Production Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database dialect: 'sqlite' for development, 'postgres' for production
DB_DIALECT=postgres

# PostgreSQL Configuration (for production)
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_NAME=fuelsync
DB_USER=fuelsync_user
DB_PASSWORD=your_secure_password_here

# SQLite Configuration (for development - optional)
# DATABASE_PATH=./data/fuelsync.db

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Server port
PORT=3001

# Node environment: 'development', 'production', 'test'
NODE_ENV=production

# ===========================================
# SECURITY
# ===========================================

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_here_64_chars_minimum

# JWT Token Expiry (default: 24h)
JWT_EXPIRY=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed origins (comma-separated)
CORS_ORIGINS=https://your-frontend.example.com,https://api.your-domain.com

# ===========================================
# RATE LIMITING
# ===========================================

# Max requests per 15 minutes
RATE_LIMIT_MAX=100

# ===========================================
# SUPER ADMIN CREDENTIALS (for initial seed)
# ===========================================

# Super admin email
ADMIN_EMAIL=admin@yourdomain.com

# Super admin password - CHANGE THIS!
ADMIN_PASSWORD=your_secure_admin_password
