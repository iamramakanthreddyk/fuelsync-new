# FuelSync Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# DB_DIALECT: sqlite (default, zero setup) or postgres
DB_DIALECT=sqlite

# PostgreSQL settings (only used if DB_DIALECT=postgres)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fuelsync
# DB_USER=postgres
# DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=fuelsync-dev-secret-key-change-in-production-2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080,https://fuelsync-new-production.up.railway.app,https://fuelsync-new.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100